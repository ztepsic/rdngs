                @Html.PagedListPager(Model.BookAuthors, page =>
                    page == 1
                    ? Url.RouteUrl("BookAuthorsIndex")
                    : Url.Action("Index", new { page }),
                    new PagedListRenderOptions {
                        LinkToFirstPageFormat = GeneralResource.PaginationFirstPage,
                        LinkToLastPageFormat = GeneralResource.PaginationLastPage
