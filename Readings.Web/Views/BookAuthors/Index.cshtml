                @foreach (var bookAuthor in Model.BookAuthors) {
                    var routeValues = new { controller = "BookAuthors", bookAuthorId = bookAuthor.Id, bookAuthorNameSlug = bookAuthor.FullName.ToSlug() };
                    <li>
                        <h2>
                            @Html.ActionLink(bookAuthor.FullName, "AuthorDetails", routeValues, new { title = String.Format("{0} - biografija pisca", bookAuthor.FullName) })
                        </h2>
                        <ul class="entry-meta">
                            <li>Dostupno autorovih djela: 2</li>
                            <li>Dostupno lektira: 2</li>
                        </ul>
                        <p>
                            @bookAuthor.ShortBiography
                            @Html.ActionLink("Pročitaj više", "AuthorDetails", routeValues, new { title = "Pročitaj više" })
                        </p>
                        <ul class="social-share">
                            <li><a href="#" rel="external" class="facebook icon-facebook"></a></li>
                            <li><a href="http://twitter.com/share?" rel="external" class="twitter icon-twitter" target="_blank"></a></li>
